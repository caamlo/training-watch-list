<h2><%= @list.name %></h2>

<!-- Lien "Ajouter un film" vers le formulaire de création d'un bookmark -->
<%= link_to 'Ajouter un film', new_list_bookmark_path(@list), class: 'btn btn-primary' %>

<!-- Affichage des films associés à la liste -->
<h3>Films dans cette liste :</h3>
<ul>
  <% @list.movies.each do |movie| %>
    <li><%= movie.title %></li>
  <% end %>
</ul>

<%= link_to 'Retour aux listes', lists_path, class: 'btn btn-secondary' %>