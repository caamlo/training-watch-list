<h1>Créer une nouvelle liste</h1>

<%= form_with model: @list, local: true, html: { multipart: true } do |form| %>
  <div class="form-group">
    <%= form.label :name, "Nom de la liste" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Nom de votre liste" %>
  </div>

  <div class="form-group">
    <%= form.label :photo, "Ajouter une photo" %>
    <%= form.file_field :photo, class: "form-control" %>
  </div>

  <%= form.submit "Créer la liste", class: "btn btn-primary mt-3" %>
<% end %>

<%= link_to "Retour aux listes", lists_path, class: "btn btn-secondary mt-3" %>
